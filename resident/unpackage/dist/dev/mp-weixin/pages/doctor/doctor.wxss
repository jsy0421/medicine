 */
.center {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.apply_page {
  background-color: #f2f2f2;
  min-height: 100vh;
}
.apply_page .form {
  background-color: #fff;
  padding: 0 24rpx 24rpx;
  margin-bottom: 25rpx;
}
.apply_page .form .form_item {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 28rpx 0;
}
.apply_page .form .form_item .label {
  color: #666;
  font-size: 30rpx;
}
.apply_page .form .form_item .label .label_txt_complete {
  color: #f5971d;
  font-size: 32rpx;
  margin-right: 6rpx;
}
.apply_page .form .form_item .label .label_required_icon {
  color: #f10;
  font-size: 32rpx;
  margin-right: 6rpx;
}
.apply_page .form .form_item .value {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.apply_page .form .form_item .value text {
  margin-left: 8rpx;
  line-height: 0;
}
.apply_page .form .form_item .value .value_txt {
  color: #999;
}
.apply_page .form .ye_block {
  border: .5rpx solid yellow;
  width: 100%;
  height: 70rpx;
  margin-top: 10rpx;
}
.apply_page .form .add_drugs_form {
  border: 0;
}
.apply_page .form .drugs_list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-flow: row wrap;
          flex-flow: row wrap;
  padding: 30rpx 12rpx;
}
.apply_page .form .drugs_list .drugs_item {
  position: relative;
  display: inline-block;
  text-align: center;
  padding: 6rpx 13rpx;
  border-radius: 8rpx;
  background-color: #dbf1e1;
  color: #18b566;
  font-size: 26rpx;
  margin-right: 38rpx;
  margin-bottom: 30rpx;
}
.apply_page .form .drugs_list .drugs_item .drug_close_icon {
  position: absolute;
  right: -12rpx;
  top: -12rpx;
}
.apply_page .condition_item {
  padding: 0 24rpx;
  background-color: #fff;
  margin-bottom: 25rpx;
}
.apply_page .condition_item .condition_content {
  padding: 22rpx 0rpx 45rpx;
}
.apply_page .condition_item .condition_content .upload_notice_txt {
  color: #888;
  font-size: 28rpx;
  text-indent: 2em;
  margin-top: 50rpx;
}
.apply_page .condition_item .condition_content .pr_img_list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.apply_page .condition_item .condition_content .pr_img_list .pr_img_item {
  position: relative;
  margin-right: 24rpx;
  margin-bottom: 24rpx;
  width: 200rpx;
  height: 200rpx;
}
.apply_page .condition_item .condition_content .pr_img_list .pr_img_item .img_close_icon {
  position: absolute;
  right: -20rpx;
  top: -20rpx;
}
.apply_page .condition_item .condition_content .pr_img_list .pr_img_item .pr_img {
  width: 100%;
  height: 100%;
}

